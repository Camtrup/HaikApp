@page
@model Haik.Pages.RegisterModel
@{
}




<link rel="stylesheet" href="~/css/logInsite.css" />

<style>
    .display-4 {
        margin-left: 550px;
    }


    form {
        margin-left: 550px;
        height: 600px;
    }
</style>

<div style="float: left">
    <img src="~/Pictures/Hiking-register.jpg"
         width="500"
         height="700" />

</div>





<h1 class="display-4"><b>Registrer bruker</b></h1>

<br>

<form method="post" id="register_form">


    <div class="form-row">
        <div class="form-group col-md-4">


            <label for="fname">Fornavn:</label><br />
            <input type="text" id="fname" name="fname" required placeholder="Ola"><br /><br />
        </div>

        <div class="form-group col-md-4">
            <label for="lname">Etternavn:</label><br />
            <input type="text" id="lname" name="lname" required placeholder="Nordmann"><br> <br>

        </div>

    </div>


    <div class="form-row">
        <div class="form-group col-md-4">

            <label for="username">Brukernavn:</label><br>
            <input type="text" id="username" name="username" required placeholder="olanordmann"><br><br>
        </div>

        <div class="form-group col-md-4">
            <label for="email">E-post:</label><br>
            <input type="email" id="email" name="email" required placeholder="olanordmann@epost.no"><br><br>


        </div>
    </div>


    <div class="form-group">
        <p>

            Velg kjønn: <br />
            <input type="radio" id="gender_female" name="gender" value="female">
            <label for="female">Kvinne</label>
            <input type="radio" id="gender_male" name="gender" value="male">
            <label for="mae">Mann</label>
            <input type="radio" id="gender_other" name="gender" value="other">
            <label for="other">Annet</label><br>
        </p>
    </div>




    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="date">Fødselsdato:</label><br>
            <input type="date" id="date" name="date" required value="YYYY-MM-DD" min="1900-01-01" max=document.write(new Date().toLocaleDateString()); />
            <br><br>
        </div>
        <div class="form-group col-md-4">

            <label for="description">Beskrivelse:</label><br />
            <textarea name="description" form="register_form" placeholder="Skriv litt om deg selv..."></textarea><br><br>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="password">Passord:</label><br />
            <input type="password" id="password" name="password" required placeholder="*********"><br><br>
        </div>
        <div class="form-group col-md-4">
            <label for="rpassword">Gjenta passord:</label><br />
            <input type="password" id="rpassword" name="rpassword" required placeholder="*********"><br><br>

        </div>
    </div>
    <label for="adminTekst">Er du administrator? Lag et Admin passord:</label><br />
    <label for="APIkey">Admin passord:</label><br />
    <input asp-for="registerViewModel.APIkey" type="text" required placeholder="*********" />



    <button type="submit" class="registerbtn">Registrer Bruker </button>



</form>


