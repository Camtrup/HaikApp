@page
@model IndexModel
@{
    ViewData["Title"] = "Register bruker";
}

<div class="text-center">
    <h1 class="display-4">Registrer bruker</h1>
    <form id="register_form" action="/action_page.php">
        <label for="fname">Fornavn:</label><br>
        <input type="text" id="fname" name="fname" required placeholder="Ola"><br>

        <label for="lname">Etternavn:</label><br>
        <input type="text" id="lname" name="lname" required placeholder="Nordmann"><br><br>

        <input type="radio" id="gender_female" name="gender" value="female">
        <label for="female">Kvinne</label><br>
        <input type="radio" id="gender_male" name="gender" value="male">
        <label for="mae">Mann</label><br>
        <input type="radio" id="gender_other" name="gender" value="other">
        <label for="other">Annet</label>

        <label for="username">Brukernavn:</label><br>
        <input type="text" id="username" name="username" required placeholder="olanordmann"><br><br>

        <label for="email">E-post:</label><br>
        <input type="email" id="email" name="email" required placeholder="olanordmann@epost.no"><br><br>

        <label for="password">Passord:</label><br>
        <input type="text" id="password" name="password" required placeholder="*********"><br><br>

        <label for="rpassword">Gjenta passord:</label><br>
        <input type="text" id="rpassword" name="rpassword" required placeholder="********"><br><br>

        <label for="date">Fødselsdato:</label><br>
        <input type="date" id="date" name="date" required value="YYYY-MM-DD" min="1900-01-01" max="2022-02-10"><br><br>

        <label for="description">Beskrivelse:</label>
        <textarea name="description" form="register_form" placeholder="Skriv litt om deg selv...">Beskrivelse</textarea>

        <input type="submit" value="Registrer Bruker">
    </form>

</div>
