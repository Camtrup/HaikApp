@page
@model Haik.Pages.RegisterModel
@{
    ViewData["Title"] = "Home page";
}

<div style="float: left">
    <img src="~/Pictures/Hiking-register.jpg"
         width="500"
         height="750" />
</div>

<div class="text-center" style="text-align: right;">
    <h1 class="display-4">Registrer bruker</h1><br>
    <form id="register_form" method="post">
        <label for="fname">Fornavn:</label>
        <input asp-for="registerViewModel.FirstName" type="text" id="fname" name="fname" required placeholder="Ola"><br><br>

        <label for="lname">Etternavn:</label>
        <input asp-for="registerViewModel.LastName" type="text" id="lname" name="lname" required placeholder="Nordmann"><br><br>

        <p>
            Velg kjønn:
            <input asp-for="registerViewModel.Gender" type="radio" id="gender_female" name="gender" value="female">
            <label for="female">Kvinne</label>
            <input asp-for="registerViewModel.Gender" type="radio" id="gender_male" name="gender" value="male">
            <label for="mae">Mann</label>
            <input asp-for="registerViewModel.Gender" type="radio" id="gender_other" name="gender" value="other">
            <label for="other">Annet</label><br>
        </p>

        <label for="email">E-post:</label>
        <input asp-for="registerViewModel.Email" type="email" id="email" name="email" required placeholder="olanordmann@epost.no"><br><br>

        <label for="date">Fødselsdato:</label>
        <input asp-for="registerViewModel.DateOfBirth" type="date" id="date" name="date" required value="YYYY-MM-DD" min="1900-01-01" max="2022-02-10"><br><br>

        <br>
        <label for="username">Brukernavn:</label>
        <input asp-for="registerViewModel.UserName" type="text" id="username" name="username" required placeholder="olanordmann"><br><br>

        <label for="description">Beskrivelse:</label>
        <textarea asp-for="registerViewModel.Description" name="description" form="register_form" placeholder="Skriv litt om deg selv..."></textarea><br><br>

        <label for="password">Passord:</label><br>
        <input asp-for="registerViewModel.Password" type="password" id="password" name="password" required placeholder="*********"><br><br>

        <label for="rpassword">Gjenta passord:</label><br>
        <input asp-for="registerViewModel.ConfirmPassword" type="password" id="rpassword" name="rpassword" required placeholder="*********"><br><br>

        <button type="submit">Registrer Bruker </button>


    </form>
</div>

