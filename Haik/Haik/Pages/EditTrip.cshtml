@page
@model Haik.Pages.EditTripModel
@{
}

<form method="post" asp-route-id="@Model.id">
    <h1 class="card-title">Rediger turarrangement</h1><br />
    <div class="p-3 mb-2 bg-info text-white">

        <label for="title"> Navn på arrangement:</label>
        <input asp-for="walkViewModel.Name" value="@Model.trip.Name" type="text" class="form-control" id="title" placeholder="Navn på arrangement..."><br />

        <label for="location"> Lokasjon: </label>
        <input asp-for="walkViewModel.Location" value="@Model.trip.Location" type="text" class="form-control" id="location" placeholder="Lokasjon..." /><br />

        <label for="duration"> Varighet: </label>
        <input asp-for="walkViewModel.Duration" value="@Model.trip.Duration" type="text" class="form-control" id="duration" placeholder="Hvor lang er turen?" /><br />

        <label for="description"> Beskrivelse: </label>
        <textarea asp-for="walkViewModel.Description" value="@Model.trip.Description" class="form-control" id="description" placeholder="Beskrivelse..."></textarea><br />

        <div class="form-group">

            <label for="difficulty"> Vanskelighetsgrad: </label><br />
            <div class="form-check">
                <input asp-for="walkViewModel.Difficulty" class="form-check-input" value="lett" type="radio" GroupName="difficulty" id="difficulty" >
                <label class="form-check-label" for="flexRadioDefault1">Lett</label>
             </div>     
            <div class="form-check">
                <input asp-for="walkViewModel.Difficulty" class="form-check-input" value="middels" type="radio" GroupName="difficulty" id="difficulty" >
                <label class="form-check-label" for="flexRadioDefault2">Middels</label>
            </div>
            <div class="form-check">
                <input asp-for="walkViewModel.Difficulty" class="form-check-input" value="vanskelig" type="radio" GroupName="difficulty" id="difficulty" >
                <label class="form-check-label" for="flexRadioDefault3">Vanskelig</label>
            </div><br />
        </div>

        <label for="date"> Dato </label><br />
        <input asp-for="walkViewModel.Date" value="@Model.trip.Date" type="date" id="date" required min="today"><br><br />

        <label for="equipments"> Nødvendig utstyr </label>
        <textarea asp-for="walkViewModel.Equipment" value="@Model.trip.Equipment" class="form-control" id="equipments" placeholder="Utstyrsliste..."></textarea><br><br />
        
        <button type="submit" class="btn btn-light">Oppdater</button>
        <a asp-page="/DeleteTrip" asp-route-id="@Model.id"><button type="button" class="btn btn-danger">Slett Arrangement</button></a>
    </div>
</form>
